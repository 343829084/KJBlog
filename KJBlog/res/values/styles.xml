<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="titlebar">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="titlebar_text" parent="titlebar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="titlebar_img" parent="titlebar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="bottombar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>

     <style name="list_text_title" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
     <style name="list_text_info"  >
        <item name="android:textColor">#9a9a9a</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">3dp</item>
    </style>
    
     <style name="textview_more">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff7b7b7b</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">false</item>
        <item name="android:drawablePadding">12.0dip</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
     
</resources>